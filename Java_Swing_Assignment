    private void Submit_ButtonActionPerformed(java.awt.event.ActionEvent evt) {                                              
        // TODO add your handling code here:
        
        String Fname=First_Name_Input.getText();
        String Lname=Last_Name_Input.getText();
        String Age= Age_Input.getText().toString();
        String Email=Email_Input.getText().toString();
        String Message=Message_Input.getText().toString();
       if(First_Name_Validation.getText()==null)
       {
           if(Last_Name_Validation.getText()==null)
           {
               if(Age_Validation.getText()==null)
               {
                   if(Email_Validation.getText()==null)
                   {
                       JOptionPane.showMessageDialog(this,"First Name is "+Fname+". "+"Last Name is "+Lname+". "+"Age is "+Age+". "+"Email is "+Email+" And the message is "+Message , "User Validation Complete", HEIGHT);
                   }
                   else{JOptionPane.showMessageDialog(this, "Please enter valid details", "Error", HEIGHT);}
               }
               else{JOptionPane.showMessageDialog(this, "Please enter valid details", "Error", HEIGHT);}
           }
           else{JOptionPane.showMessageDialog(this, "Please enter valid details", "Error", HEIGHT);}
       }
       else{JOptionPane.showMessageDialog(this, "Please enter valid details", "Error", HEIGHT);}
        
        
       
        
    }                                             

